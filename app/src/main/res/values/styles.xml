<resources>


    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <!--导航栏底色-->
        <item name="colorPrimary">@color/black_color</item>

        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/black_color</item>

        <!--Activity窗口的颜色,注意：这个颜色值要通过color属性引进来-->
        <item name="android:windowBackground">@color/white_color</item>

        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">#00ff00</item>

    </style>

    <style name="toolBar_pop_item" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="toolBar" >
        <item name="android:textColor">@color/black_color</item>
    </style>


</resources>
